        <Image x:Name="BAlarm" gif:AnimationBehavior.SourceUri=".\Assets\bulbAlarm.gif" Width="400" Height="1000"/>
      <!-- <Image x:Name="Normal" Source=".\Assets\bulbNormal.png" />
        <Button x:Name="Reset" Content="Alarm"/>-->
    </Grid>
</Page>
